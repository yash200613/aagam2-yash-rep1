#include <stdio.h>

int main() {

    int a, b, max, lcm;

    printf("Enter two positive integers: ");
    scanf("%d", &a);
    scanf("%d", &b);

    
    max = (a > b) ? a : b;

    lcm = max;

    while ((lcm % a != 0) || (lcm % b != 0)) {
        lcm += max;
    }

    printf("The LCM of %d and %d is %d.", a,  b, lcm);

    return 0;
}
